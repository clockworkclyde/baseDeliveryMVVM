<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainScreenFragment">

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.github.clockworkclyde.basedeliverymvvm.presentation.ui.main.MainScreenFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainScreenFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.github.clockworkclyde.basedeliverymvvm.presentation.ui.search.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />
    <dialog
        android:id="@+id/detailsFragment"
        android:name="com.github.clockworkclyde.basedeliverymvvm.presentation.ui.details.DetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="dishItem"
            app:argType="com.github.clockworkclyde.models.ui.menu.DishItem" />
    </dialog>
    <fragment
        android:id="@+id/orderCartFragment"
        android:name="com.github.clockworkclyde.basedeliverymvvm.presentation.ui.cart.OrderCartFragment"
        android:label="@string/cart"
        tools:layout="@layout/fragment_cart" />

    <action
        android:id="@+id/action_to_detailsFragment"
        app:destination="@id/detailsFragment" />
    <action
        android:id="@+id/action_to_orderCartFragment"
        app:destination="@id/orderCartFragment" />
</navigation>